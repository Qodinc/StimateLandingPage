---
import Button from "../../atoms/Button.astro"
import SideBar from "../../molecules/SideBar.astro"
---
<meta charset="UTF-8" />

<nav class="sticky z-10 top-0 flex w-full lg:px-20 md:px-8 px-4 py-1 gap-4 shadow-md bg-white">
    <div class="flex w-20 items-center justify-start">
        <img class="size-12" src="Logo.svg" alt="Logo">
    </div>
    <div class="hidden lg:flex w-full p-2 pl-32 items-center justify-center">
        <div class="w-full h-full text-baseColor items-center justify-center text-base font-semibold p-2 bg-accentBackground rounded-full flex gap-20">
            <a class="text-lightAccent hover:text-accent" href="#"><span>Inicio</span></a>
            <a class="hover:text-accent" href="#"><span>Beneficios</span></a>
            <a class="hover:text-accent" href="#"><span>Planes</span></a>
        </div>
    </div>
    <div class="flex gap-8 w-full lg:w-[44rem] items-center justify-end">
        <Button
        primary = {true}
        text = "Iniciar sesión"
        adicionalClass = "hidden lg:block "
        />
        <Button
        text = "¡Regístrate ahora!"
        adicionalClass = "hidden xl:block "
        />
        <button class="lg:hidden" id="menu-btn">
            <img class="size-10" src="hamburgerMenu.svg" alt="Hamburger Menu">
        </button>
        
    </div>
    <SideBar />
</nav>

<script>
    const menuButton = document.getElementById("menu-btn");
    const sidebar = document.getElementById("sidebar");
    const closeSide = document.getElementById("close");

    // Función para alternar la visibilidad del sidebar
    const toggleSidebar = () => {
        sidebar.classList.toggle('translate-x-[0%]');
    };

    // Agrega el mismo manejador de eventos a ambos botones
    menuButton.addEventListener('click', toggleSidebar);
    closeSide.addEventListener('click', toggleSidebar);
</script>